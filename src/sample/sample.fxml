<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<HBox fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <VBox>
        <ListView fx:id="employeeListView"/>
        <Button text= "Delete selected" fx:id="delete1"/>
    </VBox>
    <VBox>
        <HBox>
            <Label text="First Name" prefWidth="100" />
            <TextField prefWidth="150" fx:id="firstNameTextField"/>
        </HBox>
        <HBox>
            <Label text="Last Name" prefWidth="100" />
            <TextField prefWidth="150" fx:id="lastNameTextField"/>
        </HBox>
        <HBox>
            <Label text="Is Active" prefWidth="100" />
            <CheckBox fx:id="isActiveCheckBox"/>
        </HBox>
        <HBox>
            <Button text="clear" prefWidth="100" fx:id="clear1" />
            <Button text="add new" prefWidth="100" fx:id="add1"/>
        </HBox>
    </VBox>

</HBox>